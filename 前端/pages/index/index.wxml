      <!--轮播图开始-->
      <view class="index_swiper">
        
        <swiper autoplay indicator-dots circular>
            <swiper-item
            wx:for="{{swiperList}}"
            wx:key="goods_id">
                <navigator url="/pages/goods_detail/index?goods_id={{item.goods_id}}">
                    <image class="picture" src="{{item.image_src}}"></image>
                </navigator>
            </swiper-item>
        </swiper>
    </view>
    <!--轮播图结束-->

