<view class="luntan_index">
  <view class="post_detail">
    <view class="box">
        <view class="firstblock">
            <image class="touxiang" src="{{postObj.face_url}}"></image>
            <view class="person">
                <view class="name">
                    <text class="showname">{{postObj.username}}</text>
                </view>
                <view class="tel">
                    <text class="showtime">{{postObj.send_timestamp}}</text>
                </view>
            </view>
        </view>
        <view class="secondblock">
            <text class="content">{{postObj.content}} </text>
        </view>
        <view class="thirdblock">
            <image class="like" src="/icons/like.png"></image>
            <text class="number">{{postObj.total_likes}}</text>
            <image class="review" src="/icons/review.png"></image>
            <text class="number2">{{postObj.total_reciew}}</text>
        </view>
        <view class="pinglun_title">全部评论</view>

        <view class="fourthblock">
            <view class="pinglun_user">
                <image class="pinglun_touxiang" src="{{postObj.face_url}}"></image>
                <text class="pinglun_name">{{postObj.username}}</text>
            </view>
            
            <view class="pinglun_text">{{postObj.pinglun}}</view>
        </view>
    </view>
  </view>

</view>

