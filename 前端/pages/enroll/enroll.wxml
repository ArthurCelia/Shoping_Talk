<!--pages/enroll/enroll.wxml-->
<view class="background">
 <view class="first">
  <input placeholder="用户名" type="text" placeholder-class="plas" class="inputs" bindinput="usernameInput"></input>
 </view>
 <view class="second">
  <input placeholder="手机号" type="number"  placeholder-class="plas" class="inputs" bindinput="phonenumberInput"></input>
 </view>
 <view class="second">
  <input placeholder="密码" type="password"  placeholder-class="plas" class="inputs" bindinput="passwordInput" ></input>
 </view>
 <view class="second">
  <input placeholder="确认密码" type="password"  placeholder-class="plas" class="inputs" bindinput="passwordInputAck"></input>
 </view>
 <view class="click" bindtap="regist">注册</view>
 <view class="cha" bindtap="signin">
     <text class="no">已有账号，点我登录 </text>
 </view>


</view>